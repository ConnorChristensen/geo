@import 'vendors/reset'
@import 'variables/colors'
@import 'variables/fonts'
@import 'variables/breakpoints'
@import 'variables/mixins'
@import 'modules/topBar'

html
    font-family font

h2
    font-size 25pt
    text-align center
    padding 15px 0 0 0

p
    padding 20px
    line-height 1.2


.imageSection
    background Black
    width 100vw
    height 70vh
    min-height 600px
    color white
    background-size cover
    animation fadein .5s
    Flex(center, center)
    &>div
        width 100vw
        max-width 700px
        font-weight 100
        background rgba(0, 0, 0, 0.47)
        padding 15px


#banner
    background url(Images/summer_snow.jpg) no-repeat center center

#badges
    background url(Images/mt_hood.jpg) no-repeat center center
    .imageContainer
        text-align center
        img
            width 200px
            height 200px

#about
    background Blue
    color white
    padding 30px 0
    p
        max-width 800px
        margin auto
